<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
android:background="@color/accent"
android:weightSum="5"
tools:context=".fragments.settings.SettingsFragment">


<RelativeLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:paddingTop="20dp"
    android:layout_weight="0.5">


    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="5dp"
        android:src="@drawable/back"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"/>

    <com.google.android.material.textview.MaterialTextView
        style="@style/secondary_text_bold_Extralarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:text="@string/settings" />

</RelativeLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="3.5"
    android:layout_gravity="center_vertical"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="20dp"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="5dp"
        app:cardElevation="1dp"
        android:elevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@drawable/login_background"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/btnEditProfile"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/icon_edit_profile"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center_vertical"/>

                <TextView

                    android:text="@string/edit_profile"
                    android:background="@android:color/transparent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    style="@style/secondary_text_regular_medium"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_weight="1"
                    android:textColorHint="@color/secondaryText"

                    />

                <ImageView
                    android:id="@+id/profileback"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/edit_arrow"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center_vertical|end"/>

            </LinearLayout>
            <View
                android:id="@+id/view1"
                android:layout_marginStart="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/primaryText"/>
            <LinearLayout
                android:id="@+id/btnChangePassword"
                android:layout_gravity="center_vertical"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_payment"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center_vertical"/>

                <TextView

                    android:text="@string/change_password"
                    android:background="@android:color/transparent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    style="@style/secondary_text_regular_medium"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_weight="1"
                    android:textColorHint="@color/secondaryText"

                    />

                <ImageView
                    android:id="@+id/passwordBack"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/edit_arrow"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center_vertical|end"/>

            </LinearLayout>

            <View
                android:id="@+id/view2"
                android:layout_marginStart="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/primaryText"/>

            <LinearLayout
                android:id="@+id/btnLanguage"
                android:layout_gravity="center_vertical"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_language"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center_vertical"/>

                <TextView

                    android:text="@string/language"
                    android:background="@android:color/transparent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    style="@style/secondary_text_regular_medium"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_weight="1"
                    android:textColorHint="@color/secondaryText"

                    />

                <ImageView
                    android:id="@+id/langBack"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/edit_arrow"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center_vertical|end"/>

            </LinearLayout>

            <View
                android:layout_marginStart="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/primaryText"/>

            <LinearLayout
                android:id="@+id/btnPrivacypolicy"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_privacy"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center_vertical"/>

                <TextView

                    android:text="@string/privacy_policy"
                    android:background="@android:color/transparent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    style="@style/secondary_text_regular_medium"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_weight="1"
                    android:textColorHint="@color/secondaryText"

                    />

                <ImageView
                    android:id="@+id/policyBack"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/edit_arrow"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center_vertical|end"/>

            </LinearLayout>

            <View
                android:layout_marginStart="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/primaryText"/>

            <LinearLayout
                android:id="@+id/btnAbout"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_about"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center_vertical"/>

                <TextView

                    android:text="@string/about"
                    android:background="@android:color/transparent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    style="@style/secondary_text_regular_medium"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_weight="1"
                    android:textColorHint="@color/secondaryText"

                    />

                <ImageView
                    android:id="@+id/aboutBack"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/edit_arrow"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center_vertical|end"/>

            </LinearLayout>

            <View
                android:visibility="gone"
                android:layout_marginStart="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/primaryText"/>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/btnLegalInformation"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_legal_information"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center_vertical"/>

                <TextView

                    android:text="@string/legal_information"
                    android:background="@android:color/transparent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    style="@style/secondary_text_regular_medium"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_weight="1"
                    android:textColorHint="@color/secondaryText"

                    />

                <ImageView
                    android:id="@+id/legalBack"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/edit_arrow" />

            </LinearLayout>


            <View
                android:visibility="gone"
                android:id="@+id/view4"
                android:layout_marginStart="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/primaryText"/>



        </LinearLayout>


    </androidx.cardview.widget.CardView>



</LinearLayout>



</LinearLayout>