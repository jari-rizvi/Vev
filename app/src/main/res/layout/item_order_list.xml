<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@color/accent"
    android:layout_height="wrap_content"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:orientation="vertical">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <TextView
           android:id="@+id/orderType"
           style="@style/secondary_text_medium_medium"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerVertical="true"
           android:layout_marginBottom="5dp"
           android:text="@string/your_purchased_under_this" />

       <ImageView
           android:id="@+id/btnBack"
           android:layout_width="25dp"
           android:layout_height="25dp"
           android:layout_alignParentEnd="true"
           android:padding="4dp"
           android:src="@drawable/orderback" />


   </RelativeLayout>

    <TextView
        android:id="@+id/orderId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="id #1327444858"
        style="@style/secondary_text_light_medium" />

    <TextView
        android:id="@+id/orderAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="48.56 AED"
        style="@style/colorPrimary_text_medium_medium"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/orderDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monday 21 April"
        style="@style/secondary_text_light_small"
        android:layout_gravity="end"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/primaryText"/>



</LinearLayout>