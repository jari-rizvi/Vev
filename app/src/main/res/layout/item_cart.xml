<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/accent"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/productPicture"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="5dp"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You bought the products under"
                android:layout_centerVertical="true"
                style="@style/secondary_text_medium_medium" />


            <TextView
                android:id="@+id/productModifier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7, Hot Pink"
                style="@style/secondary_text_light_medium" />

            <TextView
                android:id="@+id/productPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="48.56 AED"
                style="@style/colorPrimary_text_medium_medium"
                android:layout_marginBottom="5dp"/>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginBottom="15dp"
               android:orientation="horizontal">

               <ImageView
                   android:id="@+id/subProduct"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:padding="6dp"
                   android:src="@drawable/icon_sub"/>

               <TextView
                   android:id="@+id/productQuantity"
                   android:layout_toEndOf="@id/subProduct"
                   android:layout_centerVertical="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="10dp"
                   android:layout_marginEnd="10dp"
                   android:text="1"
                   style="@style/secondary_text_regular_medium" />

               <ImageView
                   android:id="@+id/addProduct"
                   android:layout_toEndOf="@id/productQuantity"
                   android:layout_centerVertical="true"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:padding="6dp"
                   android:src="@drawable/icon_add"/>


               <ImageView
                   android:id="@+id/btnDelete"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:padding="6dp"
                   android:layout_alignParentEnd="true"
                   android:layout_marginEnd="20dp"
                   android:src="@drawable/icon_delete"/>

           </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginEnd="20dp"
                android:background="@color/primaryText"/>



        </LinearLayout>

    </LinearLayout>

