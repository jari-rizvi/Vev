<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@color/accent"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="5dp"
        android:alpha="0.2"
        android:src="@drawable/dummy_circle"
        android:layout_gravity="center_vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingTop="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="200dp"
            android:layout_height="15dp"
            android:background="@color/primaryText"
            android:alpha="0.2"
            android:layout_centerVertical="true"
            style="@style/secondary_text_medium_medium" />


        <TextView
            android:background="@color/primaryText"
            android:alpha="0.2"
            android:layout_marginTop="5dp"
            android:layout_width="150dp"
            android:layout_height="15dp"
            style="@style/secondary_text_light_medium" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="100dp"
            android:layout_height="15dp"
            android:background="@color/primaryText"
            android:alpha="0.2"
            style="@style/colorPrimary_text_medium_medium"
            android:layout_marginBottom="5dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/subProduct1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="6dp"
                android:background="@color/primaryText"
                android:alpha="0.2" />

            <TextView
                android:id="@+id/productQuantity1"
                android:layout_toEndOf="@id/subProduct1"
                android:layout_centerVertical="true"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/primaryText"
                android:alpha="0.2"
                style="@style/secondary_text_regular_medium" />

            <ImageView
                android:id="@+id/addProduct1"
                android:layout_toEndOf="@id/productQuantity1"
                android:layout_centerVertical="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/primaryText"
                android:alpha="0.2"
                android:padding="6dp" />


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="6dp"
                android:layout_alignParentEnd="true"
                android:background="@color/primaryText"
                android:alpha="0.2"
                android:layout_marginEnd="20dp"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:alpha="0.5"
            android:layout_marginEnd="20dp"
            android:background="@color/primaryText"/>



    </LinearLayout>

</LinearLayout>
