<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/accent"
    tools:context=".fragments.StoreProfile.SeeAllProductsFragment"
    android:id="@+id/rootLayout"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="20dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_weight="0.4">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:padding="4dp"
            android:src="@drawable/back" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/servicename"
            style="@style/secondary_text_light_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/full_category" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="4.5">


        <TextView
            android:id="@+id/categoryName"
            style="@style/secondary_text_bold_Extralarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Massages" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/itemRecyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/categoryName"
            android:layout_marginTop="5dp" />

    </LinearLayout>







</LinearLayout>