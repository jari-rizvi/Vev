<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:fb="http://schemas.android.com/apk/res-auto"
android:layout_weight="5"
android:gravity="center"
android:background="@color/accent"
tools:context=".fragments.auth.SignUpFragment">


<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/loginHeading"
        style="@style/secondary_text_bold_Extralarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/sign_up" />

    <androidx.cardview.widget.CardView
        android:id="@+id/loginCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="10dp"
        android:elevation="5dp"
        app:cardElevation="1dp"
        android:layout_below="@id/loginHeading">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:background="@drawable/login_background">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/icon_mail"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center_vertical"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:textColorHint="@color/secondaryText"
                    app:hintTextColor="@color/secondaryText"
                    android:fontFamily="@font/neusa_next_medium"
                    app:boxBackgroundColor="@color/white"
                    android:clipToPadding="false"
                    app:boxBackgroundMode="none"
                    android:hint="@string/email"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                    <EditText
                        android:id="@+id/edit_email"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:focusableInTouchMode="true"
                        android:inputType="textEmailAddress"
                        style="@style/secondary_text_regular_medium"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:layout_marginBottom="5dp"
                        android:textColorHint="@color/secondaryText"

                        />

                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>



            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/accent"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/icon_user"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center_vertical"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:textColorHint="@color/secondaryText"
                    app:hintTextColor="@color/secondaryText"
                    android:fontFamily="@font/neusa_next_medium"
                    app:boxBackgroundColor="@color/white"
                    android:clipToPadding="false"
                    app:boxBackgroundMode="none"
                    android:hint="@string/username"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                    <EditText
                        android:id="@+id/edit_username"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:focusableInTouchMode="true"
                        android:inputType="text"
                        style="@style/secondary_text_regular_medium"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:layout_marginBottom="5dp"
                        android:textColorHint="@color/secondaryText"

                        />

                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/accent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/icon_phone"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center_vertical"/>


                <com.google.android.material.textfield.TextInputLayout
                    android:gravity="bottom"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:textColorHint="@color/secondaryText"
                    app:hintTextColor="@color/secondaryText"
                    android:fontFamily="@font/neusa_next_medium"
                    app:boxBackgroundColor="@color/white"
                    android:clipToPadding="false"
                    app:boxBackgroundMode="none"
                    android:hint="+971 65465656"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">

                    <EditText
                        android:id="@+id/edit_phone"
                        android:background="@android:color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:focusableInTouchMode="true"
                        android:inputType="phone"
                        style="@style/secondary_text_regular_medium"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:layout_marginBottom="5dp"
                        android:textColorHint="@color/secondaryText"

                        />

                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>


            <View
             android:layout_marginTop="10dp"
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="@color/accent"/>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="60dp"
             android:paddingTop="10dp"
             android:layout_marginStart="5dp"
             android:layout_marginEnd="5dp"
             android:orientation="horizontal">

             <ImageView
                 android:layout_width="25dp"
                 android:layout_height="25dp"
                 android:src="@drawable/icon_password"
                 android:layout_marginEnd="5dp"
                 android:layout_marginStart="5dp"
                 android:layout_gravity="center_vertical"/>

             <com.google.android.material.textfield.TextInputLayout
                 android:gravity="bottom"
                 android:layout_width="match_parent"
                 android:layout_height="54dp"
                 android:textColorHint="@color/secondaryText"
                 app:hintTextColor="@color/secondaryText"
                 android:fontFamily="@font/neusa_next_medium"
                 app:boxBackgroundColor="@color/white"
                 android:clipToPadding="false"
                 android:inputType="textPassword"
                 app:passwordToggleEnabled="true"
                 app:passwordToggleTint="@color/secondaryText"
                 app:passwordToggleTintMode="src_atop"
                 android:hint="@string/password"
                 app:boxBackgroundMode="none"
                 style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">



                 <EditText
                     android:layout_width="match_parent"
                     android:layout_height="54dp"
                     android:focusableInTouchMode="true"
                     android:inputType="textPassword"
                     android:fontFamily="@font/neusa_next_regular"
                     android:textSize="16sp"
                     android:textColor="@color/colorPrimaryDark"
                     android:layout_marginBottom="10dp"
                     android:paddingStart="10dp"
                     android:paddingEnd="10dp"
                     android:id="@+id/edit_password"

                     />


             </com.google.android.material.textfield.TextInputLayout>


         </LinearLayout>



        </LinearLayout>



    </androidx.cardview.widget.CardView>


    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginCard">


        <androidx.cardview.widget.CardView
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="20dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            app:cardElevation="5dp"
            android:elevation="5dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/app_button_background"
                android:padding="5dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/sign_up"
                    android:paddingStart="10dp"
                    android:textAllCaps="true"
                    android:layout_weight="1"
                    style="@style/white_text_bold_medium"
                    android:gravity="center_horizontal|center_vertical"/>


                <ImageView
                    android:id="@+id/buttonBackImage"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/icon_arrow"
                    android:layout_marginEnd="10dp"/>





            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/signLayout"
            android:layout_below="@id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dontHaveAnAccount"
                style="@style/secondary_text_light_medium"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/i_already_have_an_account" />

            <TextView
                android:id="@+id/btnSignUpheading"
                android:layout_toEndOf="@id/dontHaveAnAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/log_in"
                style="@style/colorPrimary_text_light_medium"/>

        </LinearLayout>



    </RelativeLayout>



</RelativeLayout>




</LinearLayout>