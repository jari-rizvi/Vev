<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingBottom="4dp"
    android:paddingTop="4dp"
    android:background="@color/accent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtitemName"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Faux Sued Ankle Boots"
        style="@style/secondary_text_medium_medium" />

    <TextView
        android:id="@+id/txtItemIdentifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7, Hot Pink"
        style="@style/secondary_text_light_medium" />

    <TextView
        android:id="@+id/txtItemQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        style="@style/secondary_text_regular_medium" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/primaryText"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

</LinearLayout>